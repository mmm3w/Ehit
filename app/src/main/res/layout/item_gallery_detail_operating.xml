<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp_16">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/gallery_detail_part"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:overScrollMode="never" />

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/gallery_detail_download"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginEnd="@dimen/dp_4"
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_weight="1"
            android:background="@drawable/bg_fillet_grayscale_f5"
            android:elevation="2dp"
            android:gravity="center"
            android:padding="@dimen/dp_8"
            android:text="@string/text_download" />

        <TextView
            android:id="@+id/gallery_detail_read"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginEnd="@dimen/dp_24"
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_weight="1"
            android:background="@drawable/bg_fillet_grayscale_f5"
            android:elevation="2dp"
            android:gravity="center"
            android:padding="@dimen/dp_8"
            android:text="@string/text_read" />

    </LinearLayout>

</LinearLayout>




